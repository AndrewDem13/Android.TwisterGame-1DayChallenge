<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.twister.GameActivity"
    android:background="@drawable/twister_game">

    <TextView
        android:id="@+id/playersCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginStart="65dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="normal|bold" />


    <TextView
        android:id="@+id/currentPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/playersCount"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:textAlignment="textEnd"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/animation1"
        android:layout_below="@+id/playersCount"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <ImageView
        android:id="@+id/animation2"
        android:layout_below="@+id/playersCount"
        android:layout_centerInParent="true"
        android:layout_marginTop="65dp"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <Button
        android:id="@+id/next"
        android:background="#009757"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginBottom="22dp"
        android:layout_marginStart="25dp"
        android:layout_alignParentBottom="true"
        android:text="Старт"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/fall"
        android:background="#d51130"
        android:visibility="invisible"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:layout_alignBottom="@+id/next"
        android:text="Игрок упал"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light" />

</RelativeLayout>
